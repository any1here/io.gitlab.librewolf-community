{
    "id": "io.gitlab.librewolf-community",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "org.mozilla.firefox.BaseApp",
    "base-version": "25.08",
    "add-extensions": {
        "io.gitlab.librewolf_community.extension": {
            "directory": "extensions",
            "subdirectories": true,
            "merge-dirs": "lib;bin;share",
            "add-ld-path": "lib",
            "autodelete": true,
            "no-autodownload": true
        }
    },
    "command": "librewolf",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pcsc",
        "--socket=pulseaudio",
        "--socket=cups",
        "--persist=.librewolf",
        "--filesystem=xdg-download:rw",
        "--filesystem=xdg-run/speech-dispatcher:ro",
        "--device=dri",
        "--talk-name=org.freedesktop.FileManager1",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.gtk.vfs.*",
        "--env=MOZ_USE_XINPUT2=1",
        "--env=DICPATH=/usr/share/hunspell",
        "--own-name=io.gitlab.librewolf.*",
        "--own-name=io.gitlab.firefox.*",
        "--own-name=org.mpris.MediaPlayer2.firefox.*"
    ],
    "modules": [
        {
            "name": "librewolf",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib",
                "mv librewolf.tar.xz /app/lib/librewolf",
                "install -D -m644 /app/lib/librewolf/browser/chrome/icons/default/default128.png /app/share/icons/hicolor/128x128/apps/io.gitlab.librewolf-community.png",
                "install -D -m644 io.gitlab.librewolf-community.appdata.xml -t /app/share/metainfo",
                "install -D -m644 io.gitlab.librewolf-community.desktop -t /app/share/applications",
                "install -D -m755 librewolf.sh /app/bin/librewolf"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://codeberg.org/api/packages/librewolf/generic/librewolf/148.0-1/librewolf-148.0-1-linux-arm64-package.tar.xz",
                    "sha256": "11914d72c842771df18dedff4565c95587f7205c5e3576d94a85a3a108686bb2",
                    "dest": "librewolf.tar.xz",
                    "strip-components": 1,
                    "only-arches": [
                        "aarch64"
                    ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://codeberg.org/api/v1/repos/librewolf/bsys6/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.browser_download_url | endswith(\"-linux-arm64-package.tar.xz\")).browser_download_url"
                    }
                },
                {
                    "type": "archive",
                    "url": "https://codeberg.org/api/packages/librewolf/generic/librewolf/148.0-1/librewolf-148.0-1-linux-x86_64-package.tar.xz",
                    "sha256": "515f6568a980bf269f3575dc086ac4af9d5d9723b50da577887272f7cd4e47d3",
                    "dest": "librewolf.tar.xz",
                    "strip-components": 1,
                    "only-arches": [
                        "x86_64"
                    ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://codeberg.org/api/v1/repos/librewolf/bsys6/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.browser_download_url | endswith(\"-linux-x86_64-package.tar.xz\")).browser_download_url",
                        "is-main-source": true,
                        "timestamp-query": ".published_at"
                    }
                },
                {
                    "type": "file",
                    "path": "io.gitlab.librewolf-community.desktop"
                },
                {
                    "type": "file",
                    "path": "io.gitlab.librewolf-community.appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "librewolf.sh",
                    "commands": [
                        "export TMPDIR=\"$XDG_CACHE_HOME/tmp\"",
                        "exec /app/lib/librewolf/librewolf \"$@\""
                    ]
                }
            ],
            "post-install": [
                "mkdir --parents ${FLATPAK_DEST}/extensions"
            ]
        }
    ]
}
